# Server configuration
PORT=3000
NODE_ENV=development

# MySQL Database configuration
DB_HOST=db
DB_PORT=3306
DB_NAME=mb_bank_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_ROOT_PASSWORD=your_root_password
MYSQL_ROOT_PASSWORD=rootpassword

# MBBank configuration
PREFER_OCR_METHOD=default  # Options: default, tesseract, custom
SAVE_WASM=true

# Docker ports (for host machine)
API_PORT=3000  # Port to access the API from host
MYSQL_PORT=3307  # Port to access MySQL from host

# JWT Secret
JWT_SECRET=your_strong_jwt_secret # Replace with a long, random, strong secret

# Add any other environment variables required by your application
# Example: THIRD_PARTY_API_KEY=...